<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <Button
        android:id="@+id/button_module_s"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/button_module_r"
        android:layout_alignBottom="@+id/button_module_r"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:background="@drawable/button_module_s" />

    <Button
        android:id="@+id/button_module_r"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:layout_toLeftOf="@+id/button_module_s"
        android:background="@drawable/button_module_r" />

</RelativeLayout>